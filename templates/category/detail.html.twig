{% extends 'base.html.twig' %}

{% block title %}Category Detail{% endblock %}

{% block body %}
<div class="container mt-3">
<a class="btn btn-primary" href="{{ path ("category_list") }}">List Category </a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Category ID</th>
                <th scope="col">Category Name</th>
                <th scope="col">Category Description</th>
                <th scope="col">Products</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td scope="row">{{ category.id }}</td>
                <td scope="row">{{ category.name }}</td>
                <td scope="row">{{ category.description }}</td>
                <td scope="row">
                    {% for product in category.products %}
                        <a href="{{ path ('product_detail', {'id' : product.id})}}">
                        {{ product.name }}
                        </a>
                        <br>
                    {% endfor %}
                </td>
                <td scope="row">
                    <a class="btn btn-warning" href="{{ path('category_update', {'id': category.id }) }}">Update</a>
                    <a class="btn btn-danger" href="{{ path('category_delete', {'id': category.id }) }}">Delete</a>
                </td>            
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}
