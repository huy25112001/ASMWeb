{% extends 'base.html.twig' %}

{% block title %}Category Information{% endblock %}

{% block body %}

<div class="container">
    {% for flash in app.flashes("Success") %}
        <p class="alert alert-primary"> {{ flash }} </p>
    {% endfor %}
    {% for flash in app.flashes("Warning") %}
        <p class="alert alert-danger"> {{ flash }} </p>
    {% endfor %}
</div>

<div class="container mt-3">
    <a class="btn btn-primary" href="{{ path('category_create') }}">Create Category</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Category ID</th>
                <th scope="col">Category Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td scope="row">{{ category.id }}</td>
                <td scope="row">{{ category.name }}</td>
                <td scope="row">
                    <a class="btn btn-info" href="{{ path('category_detail', {'id': category.id }) }}">Detail</a>
                    <a class="btn btn-warning" href="{{ path('category_update', {'id': category.id }) }}">Update</a>
                    <a class="btn btn-danger" href="{{ path('category_delete', {'id': category.id }) }}">Delete</a>
                </td>            
            </tr>
        {% endfor %}   
        </tbody>
    </table>
</div>
{% endblock %}
